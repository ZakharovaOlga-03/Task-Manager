<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/bottom_nav_container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@color/nav_outer_bg"
  android:paddingTop="@dimen/padding_12"
  android:elevation="16dp">

  <LinearLayout
    android:id="@+id/bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/nav_inner_bg"
    android:paddingVertical="@dimen/padding_4">

    <LinearLayout
      android:id="@+id/nav_home"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:clickable="true"
      android:focusable="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:paddingVertical="@dimen/padding_4">

      <ImageView
        android:id="@+id/nav_home_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_home"
        android:scaleType="centerInside"
        android:contentDescription="Home"
        app:tint="@color/light_text" />

      <View
        android:id="@+id/nav_home_indicator"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/padding_3"
        android:background="@drawable/nav_indicator"
        android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/nav_calendar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:clickable="true"
      android:focusable="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:paddingVertical="@dimen/padding_4">

      <ImageView
        android:id="@+id/nav_calendar_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_calendar"
        android:scaleType="centerInside"
        android:contentDescription="Calendar"
        app:tint="@color/light_text" />

      <View
        android:id="@+id/nav_calendar_indicator"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/padding_3"
        android:background="@drawable/nav_indicator"
        android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/nav_add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:clickable="true"
      android:focusable="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:paddingVertical="@dimen/padding_4">

      <ImageView
        android:id="@+id/nav_add_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_plus"
        android:scaleType="centerInside"
        android:contentDescription="Add"
        app:tint="@color/accent_color" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/nav_chart"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:clickable="true"
      android:focusable="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:paddingVertical="@dimen/padding_4">

      <ImageView
        android:id="@+id/nav_chart_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_chart"
        android:scaleType="centerInside"
        android:contentDescription="Chart"
        app:tint="@color/light_text" />

      <View
        android:id="@+id/nav_chart_indicator"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/padding_3"
        android:background="@drawable/nav_indicator"
        android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/nav_profile"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:clickable="true"
      android:focusable="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:paddingVertical="@dimen/padding_4">

      <ImageView
        android:id="@+id/nav_profile_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_profile"
        android:scaleType="centerInside"
        android:contentDescription="Profile"
        app:tint="@color/light_text" />

      <View
        android:id="@+id/nav_profile_indicator"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/padding_3"
        android:background="@drawable/nav_indicator"
        android:visibility="gone" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>
