<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/primary_dark"
  android:fitsSystemWindows="true">

  <LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:paddingTop="@dimen/padding_24"
    android:paddingBottom="24dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/avatar"
      android:layout_width="88dp"
      android:layout_height="88dp"
      android:layout_gravity="center"
      android:background="@drawable/profile_avatar_bg"
      android:src="@drawable/ic_profile"
      android:scaleType="centerInside"
      android:padding="16dp" />

    <TextView
      android:id="@+id/tv_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Егор Петров"
      android:textColor="@color/text_primary"
      android:textSize="22sp"
      android:textStyle="bold"
      android:layout_marginTop="16dp" />

    <TextView
      android:id="@+id/tv_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="egor.petrov@gmail.com"
      android:textColor="@color/light_text"
      android:textSize="15sp"
      android:layout_marginTop="2dp" />
  </LinearLayout>

  <View
    android:id="@+id/profile_block_gap"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    app:layout_constraintTop_toBottomOf="@id/header"
    app:layout_constraintBottom_toTopOf="@id/profile_card"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <LinearLayout
    android:id="@+id/profile_card"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@drawable/card_content_bottom"
    android:orientation="vertical"
    android:padding="24dp"
    app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/profile_block_gap">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="18dp"
      android:text="Профиль"
      android:textColor="@color/text_primary"
      android:textSize="18sp"
      android:textStyle="bold" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Имя: Егop Петров"
      android:textColor="@color/white_text"
      android:textSize="16sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Email: egor.petrov@gmail.com"
      android:textColor="@color/white_text"
      android:textSize="16sp" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="Тип аккаунта: Premium"
      android:textColor="@color/accent_color"
      android:textSize="16sp" />

    <Button
      android:id="@+id/btn_edit_profile"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/button_create_bg"
      android:elevation="0dp"
      android:text="Редактировать"
      android:textColor="@color/white_text"
      android:textSize="15sp" />

    <Button
      android:id="@+id/btn_logout"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/button_exit_bg"
      android:elevation="0dp"
      android:text="Выйти"
      android:textColor="@color/white_text"
      android:textSize="15sp" />
  </LinearLayout>

  <include
    android:id="@+id/bottom_nav_container"
    layout="@layout/bottom_navigation"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
