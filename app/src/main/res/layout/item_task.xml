<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="top"
  android:layout_marginBottom="@dimen/padding_12">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginEnd="@dimen/padding_12">

    <ImageView
      android:id="@+id/task_status_icon"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/ic_circle_empty"
      android:contentDescription="Status"
      app:tint="@color/light_text" />

    <View
      android:id="@+id/task_line"
      android:layout_width="2dp"
      android:layout_height="50dp"
      android:layout_marginTop="@dimen/padding_4"
      android:background="#60FFFFFF" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/task_card"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@drawable/card_task_main"
    android:padding="@dimen/padding_12">

    <TextView
      android:id="@+id/tv_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="09:00 - 10:00"
      android:textSize="@dimen/text_size_12"
      android:textColor="@color/light_text"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginTop="@dimen/padding_8">

      <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/icon_20"
        android:layout_height="@dimen/icon_20"
        android:src="@drawable/ic_book"
        android:contentDescription="Icon"
        app:tint="@color/white_text" />

      <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Название задачи"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white_text"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/padding_8" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginTop="@dimen/padding_8">

      <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 час"
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/light_text" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="в процессе"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/white_text"
        android:background="@drawable/badge_dark_bg"
        android:paddingHorizontal="@dimen/padding_8"
        android:paddingVertical="@dimen/padding_3" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>
