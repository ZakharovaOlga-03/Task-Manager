<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradient_background"
  android:fitsSystemWindows="false">

  <LinearLayout
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_24"
    android:paddingHorizontal="@dimen/padding_16"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:paddingBottom="@dimen/padding_16">

      <ImageView
        android:id="@+id/menu_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_menu"
        android:contentDescription="Menu"
        android:scaleType="fitXY"
        app:tint="@color/text_primary" />

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <ImageView
        android:id="@+id/search_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_search"
        android:contentDescription="Search"
        android:scaleType="fitXY"
        app:tint="@color/text_primary" />

    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Add Task"
      android:textSize="@dimen/text_size_24"
      android:textColor="@color/text_primary"
      android:textStyle="bold"
      android:paddingBottom="15dp" />

  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toBottomOf="@id/header_layout"
    app:layout_constraintBottom_toTopOf="@id/bottom_nav_container">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/form_card_bg"
      android:paddingTop="12dp"
      android:paddingHorizontal="@dimen/padding_20"
      android:paddingBottom="@dimen/padding_24">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white_text"
        android:layout_marginBottom="@dimen/padding_8" />

      <EditText
        android:id="@+id/et_task_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_bg"
        android:hint="Введите задачу"
        android:textColorHint="@color/hint_text"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_14"
        android:paddingHorizontal="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_16" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Категория"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white_text"
        android:layout_marginBottom="@dimen/padding_8" />

      <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_bg"
        android:popupBackground="@color/primary_dark"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/padding_16" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white_text"
        android:layout_marginBottom="@dimen/padding_8" />

      <EditText
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_bg"
        android:hint="2024-03-21"
        android:textColorHint="@color/hint_text"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_14"
        android:paddingHorizontal="@dimen/padding_16"
        android:focusable="false"
        android:cursorVisible="false"
        android:layout_marginBottom="@dimen/padding_16" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/padding_16">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_marginEnd="@dimen/padding_8">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начало"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white_text"
            android:layout_marginBottom="@dimen/padding_8" />

          <EditText
            android:id="@+id/et_start_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:hint="10:00"
            android:textColorHint="@color/hint_text"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            android:paddingHorizontal="@dimen/padding_16"
            android:focusable="false"
            android:cursorVisible="false" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_marginStart="@dimen/padding_8">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Конец"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white_text"
            android:layout_marginBottom="@dimen/padding_8" />

          <EditText
            android:id="@+id/et_end_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_bg"
            android:hint="17:00"
            android:textColorHint="@color/hint_text"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            android:paddingHorizontal="@dimen/padding_16"
            android:focusable="false"
            android:cursorVisible="false" />

        </LinearLayout>

      </LinearLayout>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Напоминание"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white_text"
        android:layout_marginBottom="@dimen/padding_8" />

      <Spinner
        android:id="@+id/spinner_reminder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_bg"
        android:popupBackground="@color/primary_dark"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/padding_20" />

      <Button
        android:id="@+id/btn_create_task"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Создать задачу"
        android:textColor="@color/white_text"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:background="@drawable/button_create_bg"
        android:elevation="0dp" />

    </LinearLayout>

  </ScrollView>

  <include
    android:id="@+id/bottom_nav_container"
    layout="@layout/bottom_navigation"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
